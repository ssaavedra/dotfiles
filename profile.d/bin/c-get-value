#!/bin/bash

##################################################
# Basic program for telling C values
# 
# This script lets you put a C expression and
# automatically creates, compiles and executes
# a C program that does exactly that operation
# and then outputs the result.
#
# The executable image deletes itself upon
# execution, so it does not clutter space.
#
##################################################
# Author: Santiago Saavedra LÃ³pez.
# License: BSD Style.
##################################################


if [ -z "$1" -o "$1" = "-" ]; then
	printf "Expression: "
	read VAR
else
	VAR="$1"
fi

if [ -z "$2" ]; then
	printf "Library: "
	read LIBRARY
else
	LIBRARY="$2"
fi

FILE=$RANDOM

CC=${CC:-cc}
COPTS="-x c - -o $FILE"

if [ "x$3" = "x-d" ]; then
	# Show source
	CC=cat
	COPTS=''
fi

$CC $COPTS <<EOF
#include <stdio.h>
#include <limits.h>
#include <stdlib.h>
#include <errno.h>
#include <unistd.h>
#include <sys/stat.h>
#include <sys/shm.h>
#include <sys/types.h>
#include <$LIBRARY>

int
main() {
	//printf("$VAR = %d [0x%x] [%p]\n", ($VAR), $VAR, (void*)$VAR);
	printf("$VAR = %d [0x%x]\n", ($VAR), $VAR);
	unlink("$FILE");
	return 0;
}
EOF

exec ./$FILE

