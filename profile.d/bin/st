#!/bin/sh
##################################################
# This scripts allows me to create a new X
# server with another (or the same) window
# manager.
##################################################
## Author: Santiago Saavedra LÃ³pez.
## License: GNU General Public License version 3
##################################################

program=`which $1`

#unset DBUS_SESSION_BUS_ADDRESS
#exec xinit $program -- :1

chdir "$HOME"
cd "$HOME"

export DISPLAY=":$(( $(echo $DISPLAY|sed 's/^://') + 1 ))"

exec xinit /usr/bin/dbus-launch --exit-with-session "$program" -- $DISPLAY

